{
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "include": ["src"],
}
